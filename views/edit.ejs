<%- include("partials/header")%>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">
	        Edit <%=campground.name%>
        </h1>

		<div style="width:30%;margin:20px auto">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="name" value="<%=campground.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" value="<%=campground.price%>" min="100" step="100">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" value="<%=campground.description%>">
				</div>
	           
			
				<div class="form-group">
	            <button class="btn btn-lg btn-primary btn-block">
	             	Submit
	            </button>
				</div>
	          </form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>
<%- include("partials/footer")%>
